doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport",content="width=device-width, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0")
    title= pageTitle    
    link(rel="stylesheet",type="text/css",href="/statics/css/bootstrap.min.css" )
  body.text-center
    nav.navbar.navbar-fixed-top
      .container
        ul.nav.navbar-nav
          li
            a(href='/') 首页
          li
            a(href='/login') 注册

    .page-header 
      h1.lead 登陆
      - if (errormessage)
        p.bg-danger=errormessage

    .container
      form.form-horizontal(action="/login",method="post")
        .form-group
          label.col-sm-4.control-label(for="email") email
          .col-sm-4
            input.form-control(name="email",id="email")
        .form-group
          label.col-sm-4.control-label(for="password") password
          .col-sm-4
            input.form-control(name="password",type="password",id="password")
        .form-group
          button.btn.btn-primary(type="submit") 提交登陆
          a.btn.btn-link(href="/regist") 我要注册
        
        

